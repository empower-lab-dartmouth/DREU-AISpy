<?xml version="1.0" encoding="utf-8"?>

    <!--
    Thanks to Devunwired from stack for the idea for this layout
    https://stackoverflow.com/questions/13298617/android-dialog-minimum-margin
    Thanks to booger from stack for idea on gradient
    https://stackoverflow.com/questions/14364617/how-can-i-add-gradient-effect-to-background-color-of-textview-in-a-listview
    -->


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/gradientEnd"
                android:endColor="@color/gradientStart"
                android:angle="-270" />
        </shape>
    </item>
    <item android:left="10dp" android:right="10dp"  android:top="10dp" android:bottom="100dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>

    </item>
</layer-list>

